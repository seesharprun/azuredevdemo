<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewBag.Title - @PageData["Header"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/css/bootstrap.min.css" integrity="sha384-2hfp1SzUoho7/TsGGGDaFdsuuDL0LX2hnUp6VkX3CUQ2K4K+xjboZdsXyp4oUHZj" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="container">
        <nav class="navbar @PageData["NavbarTheme"]">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="fa @PageData["NavbarIcon"]" aria-hidden="true"></i>
                @PageData["Header"]
            </a>
        </nav>
        <main>
            <header>
                @RenderSection("header", required: false)
            </header>
            <article>
                <div class="jumbotron">
                    <h1 class="display-3">@ViewBag.SubTitle</h1>
                    <hr class="m-y-2">
                    @RenderBody()
                </div>
            </article>
            <footer>
                <hr />
                @RenderSection("footer", required: false)
                <ul class="nav nav-inline">
                    <li class="nav-item">
                        &copy; @DateTime.Now.Year - Contoso Events
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Admin Dashboard", "Index", "Home", new { area = "Admin" }, new { @class = "nav-link" })
                    </li>
                </ul>
                <p></p>
            </footer>
        </main>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js" integrity="sha384-THPy051/pYDQGanwU6poAc/hOdQxjnOEXzbT+OuUAFqNqFjL+4IGLBgCJC3ZOShY" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.2.0/js/tether.min.js" integrity="sha384-Plbmg8JY28KFelvJVai01l8WyZzrYWG825m+cZ0eDDS1f7d/js6ikvy1+X+guPIB" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/js/bootstrap.min.js" integrity="sha384-VjEeINv9OSwtWFLAtmc4JCtEJXXBub00gtSnszmspDLCtC0I4z4nqz7rEFbIZLLU" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</body>
</html>